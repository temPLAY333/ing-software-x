# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/main_db?retryWrites=true&w=majority&tls=true&tlsAllowInvalidCertificates=false
MONGODB_LOGS_URI=mongodb+srv://username:password@cluster.mongodb.net/logs_db?retryWrites=true&w=majority&tls=true&tlsAllowInvalidCertificates=false

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-here-change-in-production

# Flask Mail Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Firebase Configuration (Frontend)
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_APP_ID=your-app-id

# Heroku Configuration
HEROKU_APP_NAME=your-app-name
