FLASK_ENV=development
FLASK_APP=app.py
SECRET_KEY=your-secret-key-here

# MongoDB Atlas Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/main_db?retryWrites=true&w=majority&tls=true
MONGODB_LOGS_URI=mongodb+srv://username:password@cluster.mongodb.net/logs_db?retryWrites=true&w=majority&tls=true

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRES=3600

# Flask Mail Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@yourapp.com

# CORS Configuration
CORS_ORIGINS=https://your-frontend.web.app,http://localhost:4200

# Heroku Configuration
PORT=5000
